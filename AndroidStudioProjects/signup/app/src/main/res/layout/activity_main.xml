<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:layout_margin="20dp"
    android:background="@drawable/white"
    android:divider="@drawable/divider"
    android:showDividers="middle">

    <ImageView
        android:layout_width="120dp"
        android:layout_marginTop="15dp"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/signup"
        android:layout_gravity="center"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:textSize="50dp"
        android:fontFamily="@font/raleway"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#3C192726" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="name:"
            android:textColor="#DF4C6571"
            android:fontFamily="@font/ralewaybold"
            android:textSize="30dp">
        </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="    enter name"
        android:id="@+id/etmainname"
        android:background="@drawable/etdesign"
        android:textStyle="italic"></EditText>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="password:"
            android:fontFamily="@font/ralewaybold"
            android:textColor="#DF4C6571"
            android:textSize="30dp">
        </TextView>>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   enter password"
            android:id="@+id/etmainpass"
            android:background="@drawable/etdesign"
            android:inputType="textPassword"
            android:textStyle="italic"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:fontFamily="@font/ralewaybold"
            android:textSize="30dp"
            android:textColor="#DF4C6571">
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="    enter email"
            android:id="@+id/etmainemail"
            android:background="@drawable/etdesign"
            android:textStyle="italic"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Number :"
            android:fontFamily="@font/ralewaybold"
            android:textColor="#DF4C6571"
            android:textSize="30dp">
        </TextView>>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="   enter number"
            android:id="@+id/etmainnum"
            android:background="@drawable/etdesign"
            android:textStyle="italic"></EditText>
    </LinearLayout>

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <Button
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/etmainsub"
            android:layout_weight="1"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resert"
            android:id="@+id/etmainreset"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            ></Button>
    </LinearLayout>
</LinearLayout>